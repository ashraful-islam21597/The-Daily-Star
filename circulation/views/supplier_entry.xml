<odoo>
    <record id="view_supplier_entry_form" model="ir.ui.view">
        <field name="name">supplier.entry.form</field>
        <field name="model">supplier.entry</field>
        <field name="arch" type="xml">
            <form string="Supplier Information">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="code" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="supplier_name"/>
                            <field name="short_name"/>
                            <field name="supplier_nid"/>
                            <field name="supplier_type"/>
                            <field name="business_category"/>
                        </group>
                        <group>
                            <field name="product_service_description"/>
                            <field name="trade_license_no"/>
                            <field name="incorporate_certificate_no"/>
                            <field name="location"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_supplier_entry_list" model="ir.ui.view">
        <field name="name">supplier.entry.list</field>
        <field name="model">supplier.entry</field>
        <field name="arch" type="xml">
            <list string="Suppliers">
                <field name="code"/>
                <field name="supplier_name"/>
                <field name="short_name"/>
                <field name="supplier_type"/>
                <field name="business_category"/>
                <field name="location"/>
            </list>
        </field>
    </record>

    <record id="action_supplier_entry" model="ir.actions.act_window">
        <field name="name">Supplier Entry</field>
        <field name="res_model">supplier.entry</field>
        <field name="view_mode">list,form</field>
    </record>
    <menuitem id="menu_supplier_entry"
              name="Supplier Entry"
              parent="menu_configuration"
              action="action_supplier_entry"/>
</odoo>
