<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_station_entry_form" model="ir.ui.view">
        <field name="name">station.entry.form</field>
        <field name="model">station.entry</field>
        <field name="arch" type="xml">
            <form string="Station Entry">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="code" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="name" string="Station" />
                            <field name="division_id" />
                            <field name="country_id" invisible="1"/>
                            <field name="district_id"/>
                            <field name="agent_id"/>
                        </group>
                        <group>
                            <field name="bangla_name" string="স্টেশন"/>
                            <field name="division_bangla" string="বিভাগ"/>
                            <field name="district_bangla" string="জেলা"/>
                            <field name="agent_bangla_name" string="এজেন্ট"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_station_entry_list" model="ir.ui.view">
        <field name="name">station.entry.list</field>
        <field name="model">station.entry</field>
        <field name="arch" type="xml">
            <list string="Station List">
                <field name="code"/>
                <field name="name"/>
                <field name="bangla_name"/>
                <field name="division_id"/>
                <field name="district_id"/>
                <field name="agent_id"/>
            </list>
        </field>
    </record>

    <record id="action_station_entry" model="ir.actions.act_window">
        <field name="name">Station Entry</field>
        <field name="res_model">station.entry</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_station_entry"
              name="Station Entry"
              sequence="1"
              parent="menu_configuration"
              action="action_station_entry"/>
</odoo>
