<odoo>
    <!-- list View -->
    <record id="view_country_police_station_list" model="ir.ui.view">
        <field name="name">country.police.station.list</field>
        <field name="model">country.police.station</field>
        <field name="arch" type="xml">
            <list string="Police Stations">
                <field name="code"/>
                <field name="name"/>
                <field name="bangla_name"/>
                <field name="district_id"/>
                <field name="division_id"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_country_police_station_form" model="ir.ui.view">
        <field name="name">country.police.station.form</field>
        <field name="model">country.police.station</field>
        <field name="arch" type="xml">
            <form string="Police Station">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="code" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="bangla_name"/>
                        </group>
                        <group>
                            <field name="division_id"/>
                            <field name="district_id" domain="[('division_id', '=', division_id)]"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_country_police_station_search" model="ir.ui.view">
        <field name="name">country.police.station.search</field>
        <field name="model">country.police.station</field>
        <field name="arch" type="xml">
            <search string="Search Police Stations">
                <field name="name"/>
                <field name="bangla_name"/>
                <field name="district_id"/>
                <field name="division_id"/>
            </search>
        </field>
    </record>

     <!-- Action -->
    <record id="action_country_police_station" model="ir.actions.act_window">
        <field name="name">Police Stations</field>
        <field name="res_model">country.police.station</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create the first Police Station
            </p>
        </field>
    </record>

    <!-- Menu Items -->

    <menuitem id="menu_country_police_station"
              name="Police Stations"
              parent="menu_configuration"
              action="action_country_police_station"
              sequence="4"/>
</odoo>
