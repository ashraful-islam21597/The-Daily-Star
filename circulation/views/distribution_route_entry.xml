<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- list View -->
    <record id="view_distribution_route_list" model="ir.ui.view">
        <field name="name">distribution.route.list</field>
        <field name="model">distribution.route</field>
        <field name="arch" type="xml">
            <list string="Distribution Route Entries">
                <field name="code"/>
                <field name="name"/>
                <field name="bangla_name"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_distribution_route_form" model="ir.ui.view">
        <field name="name">distribution.route.form</field>
        <field name="model">distribution.route</field>
        <field name="arch" type="xml">
            <form string="Distribution Route Entry">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="code" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="bangla_name"/>
                        </group>
                        <group>
                            <field name="transport_id"/>
                            <field name="transport_bangla_name" string="ট্রান্সপোর্ট"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_distribution_route" model="ir.actions.act_window">
        <field name="name">Distribution Route Entries</field>
        <field name="res_model">distribution.route</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_distribution_route"
              name="Route Entries"
              sequence="2"
              parent="menu_configuration"
              action="action_distribution_route"/>
</odoo>
