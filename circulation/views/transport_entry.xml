<odoo>
    <!-- Form View -->
    <record id="view_transport_info_form" model="ir.ui.view">
        <field name="name">transport.info.form</field>
        <field name="model">transport.info</field>
        <field name="arch" type="xml">
            <form string="Transport Entry">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="code" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="transport_name"/>
                        </group>
                        <group>
                            <field name="bangla_name"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- list/List View -->
    <record id="view_transport_info_list" model="ir.ui.view">
        <field name="name">transport.info.list</field>
        <field name="model">transport.info</field>
        <field name="arch" type="xml">
            <list string="Transport Entries">
                <field name="code"/>
                <field name="transport_name"/>
                <field name="bangla_name"/>
            </list>
        </field>
    </record>

    <!-- Action -->
    <record id="action_transport_info" model="ir.actions.act_window">
        <field name="name">Transport Entry</field>
        <field name="res_model">transport.info</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_transport_info"
              name="Transport Entry"
              parent="menu_configuration"
              action="action_transport_info"/>
</odoo>
