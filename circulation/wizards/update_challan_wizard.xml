<odoo>
    <!-- Wizard Form View -->
    <record id="view_update_challan_entry_wizard_form" model="ir.ui.view">
        <field name="name">update.challan.entry.wizard.form</field>
        <field name="model">update.challan.entry.wizard</field>
        <field name="arch" type="xml">
            <form string="Update Challan Entry" version="7.0">
                <group>
                    <group>
                        <field name="date"/>
                        <field name="agent_id"/>
                    </group>
                    <group>
                        <field name="station_id"/>
                        <field name="challan_entry_id"/>
                    </group>
                </group>
                 <notebook>
                     <page string="General Sales" name="general_sale_page">
                         <form>
                             <group>
                                 <group>
                                     <field name="general_sale_qty"/>
                                     <field name="general_sale_specimen_qty"/>
                                     <field name="general_sale_discount"/>
                                 </group>
                                 <group>
                                     <field name="general_sale_rate"/>
                                     <field name="general_sale_extra_discount"/>
                                     <field name="general_sale_packet_number"/>
                                 </group>
                             </group>
                         </form>
                     </page>
                     <page string="Corporate Sales" name="corporate_sale_page">
                            <form>
                                <group>
                                    <group>
                                        <field name="client_name"/>
                                        <field name="project"/>
                                        <field name="corporate_sale_qty"/>
                                        <field name="corporate_sale_discount"/>
                                        <field name="corporate_sale_extra_discount"/>
                                    </group>
                                    <group>
                                        <field name="client_bangla_name"/>
                                        <field name="corporate_sale_rate"/>
                                        <field name="corporate_sale_specimen_qty"/>
                                        <field name="corporate_sale_packet_number"/>
                                    </group>
                                </group>
                            </form>
                        </page>
                     <page string="Representative Sales" name="representative_sale_page">
                            <form>
                                <group>
                                    <group>
                                        <field name="representative_id"/>
                                        <field name="representative_bangla_name"/>
                                    </group>
                                    <group>


                                        <field name="representative_sale_qty"/>
                                        <field name="representative_sale_packet_number"/>
                                    </group>
                                </group>
                            </form>
                        </page>

                    </notebook>
                <footer>
                    <button name="action_update_challan" string="Confirm" type="object" class="btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
